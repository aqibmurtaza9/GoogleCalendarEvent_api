<button onclick="openGoogleAuthPopup()">Signin to access google calendar</button>



<script>
    function openGoogleAuthPopup() {
        fetch('/auth/google')
            .then(response => response.text())
            .then(html => {
                var popupWindow = window.open('', 'googleAuthPopup', 'width=500,height=600');
                popupWindow.document.open();
                popupWindow.document.write(html);
                popupWindow.document.close();
            })
            .catch(error => {
                console.error('Error opening Google authentication popup:', error);
            });
    }
</script>